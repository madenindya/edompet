<head>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

<body>
   <div class="container" style="width: 80%; margin-top: 10px;">
      <ul class="nav nav-tabs">
        <li role="presentation"><a href="ping">Ping</a></li>
        <li role="presentation"><a href="register">Register</a></li>
        <li role="presentation"><a href="transfer">Transfer</a></li>
        <li role="presentation"><a href="getSaldo">Cek Saldo</a></li>
        <li role="presentation"><a href="getTotalSaldo">Cek Total Saldo</a></li>
        <li role="presentation"><a href="/ewallet/client">Cek Quorum</a></li>
      </ul>
      <form class="form-horizontal" method="post">
         <fieldset>
            <!-- Form Name -->
            <h3>{{.title}}</h3>
            <!-- Select Basic -->
            <div class="form-group">
               <label class="col-md-4 control-label" for="selectbasic">Kantor Cabang Tujuan</label>
               <div class="col-md-4">
                  <select id="selectbasic" name="selectbasic" class="form-control">
                     <option value="0">Select one</option>
                     {{ range $key, $value := .ips }}
                        <option value="{{ $key }}">{{ $value }}</option>
                     {{ end }}
                  </select>
               </div>
            </div>
            <!-- Button -->
            <div class="form-group">
               <label class="col-md-4 control-label" for="submit"></label>
               <div class="col-md-4">
                  <button id="submit" name="submit" class="btn btn-primary">Ping</button>
               </div>
            </div>
         </fieldset>
      </form>
      
      {{ if .message }}
         <div>
          <p>
            Response:
            <br>{{ .message }}
          </p>
         </div>
      {{ end }}
   </div>
</body>
